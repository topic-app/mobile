{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ts/*": ["./src/ts/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@redux": ["./src/redux"],
      "@redux/*": ["./src/redux/*"],
      "@assets/*": ["./src/assets/*"],
      "@src/*": ["./src/*"],
      "@root/*": ["./*"],
    }
  },
  "exclude": ["node_modules"]
}
