{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "jsx-a11y", "import", "prettier"],
  "rules": {
    "linebreak-style": ["off"],
    "no-undef": ["error"],
    "react/sort-comp": ["off"],
    "react/prefer-stateless-function": ["off"],
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": ["off"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".android.js",
          ".ios.js",
          ".web.js",
          ".jsx",
          ".android.jsx",
          ".ios.jsx",
          ".web.jsx"
        ]
      }
    }
  }
}
