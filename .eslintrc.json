{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "jsx-a11y", "import", "prettier"],
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "packageDir": "." }],
    "linebreak-style": ["off"],
    "no-undef": ["error"],
    "react/sort-comp": ["off"],
    "react/prefer-stateless-function": ["off"],
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": ["off"]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
